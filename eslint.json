{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "quotes": [2, "single"],
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-extra-parens": 2,
    "default-case": 2,
    "no-floating-decimal": 2,
    "no-param-reassign": 2,
    "no-self-compare": 2,
    "no-throw-literal": 2,
    "radix": 2,
    "no-var": 2,
    "max-len": [2, 120, 2],
    "max-depth": [2, 5],
    "max-params": [1, 8],
    "no-bitwise": 2,
    "indent": [2, 2],
    "no-trailing-spaces": [2, {"skipBlankLines": false}],
    "yoda": [2, "never"]
  }
}
